<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color">

    <com.amap.api.maps.MapView
        android:id="@+id/mv_homepage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="@dimen/standard_margin">

        <TextView
            android:id="@+id/tv_gps_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/big_item"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/title"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_device_connected"
            android:layout_width="@dimen/sub_icon"
            android:layout_height="@dimen/sub_icon"
            android:layout_gravity="right"
            android:layout_margin="@dimen/standard_padding"
            android:background="@color/red"
            android:src="@drawable/ic_place_black_24dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/bt_my_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_color_blue"
            android:text="@string/my_location"
            android:textSize="@dimen/subhead" />

        <Button
            android:id="@+id/bt_want_to_by_bus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_margin"
            android:background="@drawable/bg_color_cyan"
            android:text="@string/i_want_by_bus"
            android:textSize="@dimen/subhead" />

        <Button
            android:id="@+id/bt_factory_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_margin"
            android:background="@color/orange"
            android:text="工厂测试"
            android:textSize="@dimen/subhead"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>
