<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/bus_info_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bus_info_iv_src"
        android:paddingTop="22dp"
        android:paddingLeft="39dp"
        android:paddingBottom="100dp"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/bus_info_linename_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#333333"
                android:textSize="30sp"
                android:text="111"/>
            <TextView
                android:id="@+id/bus_info_statecount_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#39B356"
                android:textSize="24sp"
                android:text="111"
                android:gravity="right"/>
        </LinearLayout>

        <TextView
            android:id="@+id/bus_info_currentstop_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="26sp"
            android:text="111"/>

        <TextView
            android:id="@+id/bus_info_nextstop_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="26sp"
            android:text="111"/>

    </LinearLayout>
</LinearLayout>