<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/standard_margin">

    <EditText
        android:id="@+id/et_shake_test_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="ssid" />

    <EditText
        android:id="@+id/et_shake_test_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/standard_margin"
        android:hint="password" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/standard_margin"
        android:gravity="center"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/pb_shake_test_recall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <Button
            android:id="@+id/bt_shake_test_recall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/standard_margin"
            android:background="@color/orange"
            android:text="重复播报" />

        <ImageView
            android:id="@+id/iv_shake_test_device_connected"
            android:layout_width="@dimen/sub_icon"
            android:layout_height="@dimen/sub_icon"
            android:background="@color/red"
            android:src="@drawable/ic_wifi_black_24dp" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_shake_test_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_margin"
        android:background="@color/green"
        android:text="connect" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_margin"
        android:text="图标绿色代表已连接，摇一摇发送播报命令\n每次连接前请删除附近能自动连接上的WIFI\n如有问题关闭此页面重新打开" />

    <EditText
        android:id="@+id/et_shake_test_imei"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/standard_margin"
        android:hint="imei" />

    <Button
        android:id="@+id/bt_shake_test_get_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_margin"
        android:background="@color/blue"
        android:text="get wifi info" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_margin"
        android:text="可以通过输入设备imei获取设备WIFI信息" />


</LinearLayout>
