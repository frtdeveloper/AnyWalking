<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.bybus.MutilWaitBusActivity">
    <ListView
        android:id="@+id/m_wait_bus_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/m_wait_bus_connected_iv"
            android:layout_width="@dimen/sub_icon"
            android:layout_height="@dimen/sub_icon"
            android:layout_gravity="right"
            android:layout_margin="@dimen/standard_margin"
            android:background="@color/red"
            android:contentDescription="设备未连接"
            android:src="@drawable/ic_wifi_black_24dp" />

        <!--<TextView-->
        <!--android:id="@+id/tv_rssi"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="right"-->
        <!--android:text="WIFI RSSI" />-->

        <Button
            android:id="@+id/m_wait_bus_connected_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_color_red"
            android:text="@string/cancel_waiting"
            android:textSize="@dimen/subhead" />
    </LinearLayout>
</LinearLayout>